<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">

    <!-- Columns (portlet managers) -->

    <!-- frontpage.main â€” managers located in the main (LEFT) column of the
    company board of the frontpage view-->
    <portletmanager
      name="frontpage.main.prefix"
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />
    <portletmanager
      name="frontpage.main.left"
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />
    <portletmanager
      name="frontpage.main.right"
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />
    <portletmanager
      name="frontpage.main.suffix"
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />

    <!-- frontpage.portlets.right is the manager located in the secondary
    (RIGHT) column of the company board of the frontpage view -->
    <portletmanager
      name="frontpage.portlets.right"
      type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
      />

    <assignment name="highlight"
        category="context"
        key="/"
        manager="frontpage.main.prefix"
        type="plone.portlet.static.Static"
        visible="True">
        <property name="header">Frontpage Highlight</property>
        <property name="text">Test frontpage highlight text</property>
        <property name="omit_border">True</property>
    </assignment>

    <assignment name="fp_static_right"
        category="context"
        key="/"
        manager="frontpage.portlets.right"
        type="plone.portlet.static.Static"
        visible="True">
        <property name="header">Frontpage right column</property>
        <property name="text">Test frontpage right text</property>
        <property name="omit_border">True</property>
    </assignment>

    <assignment name="navigation"
        category="context"
        key="/"
        manager="plone.leftcolumn"
        type="portlets.Navigation"
        visible="True">
        <property name="topLevel">1</property>
        <property name="currentFolderOnly">True</property>
        <property name="name"></property>
        <property name="includeTop">True</property>
        <property name="bottomLevel">1</property>
        <property name="root"></property>
    </assignment>

</portlets>
