<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="intranett">
<body>

    <metal:content fill-slot="content"
                   tal:define="dummy view/update;
                               department_request python:request.get('department', None);
                               employees python:department_request and view.employees(department_request) or view.employees()">

        <article id="content">

            <header>
                <tal:departmentview condition="department_request">
                    <h1 class="documentFirstHeading"
                        tal:condition="department_request"
                        tal:content="department_request">
                        department
                    </h1>
                    <div class="documentDescription">
                        <a href="" title="Show all employees"
                           tal:condition="department_request"
                           tal:attributes="href string:${context/absolute_url}/employee-listing">
                           Show employees of all departments?
                        </a>
                    </div>
                </tal:departmentview>
                <h1 class="documentFirstHeading"
                    tal:condition="not:department_request"
                    i18n:translate="">Employees</h1>
            </header>

            <div id="content-core">

                <div id="departments-wrapper" tal:condition="python:view.departments() and not department_request">
                    <strong i18n:translate="">Departments:</strong>
                    <ul id="departments-list" class="horrList">
                        <li tal:repeat="department view/departments"
                            tal:attributes="class python:department_request == department and 'selected' or 'plain'">
                            <a href="" title=""
                               tal:attributes="href string:${context/absolute_url}/employee-listing?department=$department"
                               tal:content="department">IT Department</a>
                        </li>
                    </ul>
                </div>

                <div id="employee-listing-wrapper">
                    <tal:employee repeat="employee employees">
                        <div class="tileItem visualIEFloatFix vcard"
                             tal:define="department employee/department|nothing;
                                         portal context/@@plone_portal_state/portal;
                                         normalizeString nocall:context/@@plone/normalizeString;
                                         wtool portal/portal_workflow;
                                         item_wf_state        employee/review_state|python: wtool.getInfoFor(employee, 'review_state', '');
                                         item_wf_state_class  python:'state-' + normalizeString(item_wf_state);">
                            <a href="#"
                               tal:attributes="href string:$portal_url/@@user?name=${employee/username};
                                               title employee/fullname">
                                <img class="image-left photo" alt="" src=""
                                     tal:condition="employee/thumbnail_url"
                                     tal:attributes="src employee/thumbnail_url" />
                                <img class="image-left photo" alt="" src=""
                                     tal:condition="not:employee/thumbnail_url"
                                     tal:attributes="src string:$portal_url/defaultUser.png" />
                            </a>
                            <div class="info">
                                <h2 class="tileHeadline">
                                    <span class="summary">
                                        <a class="state-private url fn"
                                           tal:content="employee/fullname | employee/username"
                                           tal:attributes="href string:$portal_url/@@user?name=${employee/username};
                                                           title employee/fullname;
                                                           class string:$item_wf_state_class url fn">Test Page</a>
                                    </span>
                                </h2>
                                <div class="tileBody">
                                    <tal:position condition="employee/position">
                                        <span tal:replace="employee/position" />,
                                    </tal:position>
                                    <tal:department condition="employee/department"><a href=""
                                         tal:attributes="href string:${context/absolute_url}/employee-listing?department=$department"
                                         tal:content="employee/department">Department</a>
                                    </tal:department>
                                    <div class="tel" tal:condition="employee/mobile">
                                        <span class="type hiddenStructure">Mobile</span>
                                        <span tal:omit-tag=""
                                              i18n:translate="label_mobile">Mobile phone</span>:
                                        <span class="value" tal:content="employee/mobile" />
                                    </div>
                                    <div class="tel" tal:condition="employee/phone">
                                        <span class="type hiddenStructure">Work</span>
                                        <span tal:omit-tag=""
                                              i18n:translate="label_phone">Phone</span>:
                                        <span class="value" tal:content="employee/phone" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tal:employee>
                </div>
            </div>
        </article>
    </metal:content>

</body>
</html>
